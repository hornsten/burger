<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h1 class="center-align text-warning">Eat Da Burger, Mon</h1>
      <img class="center-align" src="/assets/img/chicken-burger.jpg"></img>
      <h2 class="center-align">Add a Burger</h2>
      <form method="POST" action="/" class="button-size text-center">
        <textarea type="text" name="burger_name"></textarea>
        <br>
        <button class="waves-effect waves-light btn" type="submit">Save Burger!</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6">
      <ul class="collection with-header">
        <li class="collection-header">
          <h4>Ready To Eat</h4></li>
        {{#each burgers}} {{#unless this.devoured}}
        <li class="collection-item avatar">
          <img src="/assets/img/burger.jpeg" alt="" class="circle">
          <span class="title">
            {{this.id}}. {{this.burger_name}}</span>
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="id" value="{{this.devoured}}">
            <br>
            <button class="waves-effect waves-light btn-floating btn-large secondary-content yellow darken-1" type="submit">EAT</button>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col s12 m6">
      <ul class="collection with-header">
        <li class="collection-header">
          <h4>Devoured Burgers</h4></li>
        {{#each burgers}} {{#if this.devoured}}
        <li class="collection-item avatar">
          <img src="/assets/img/burger.jpeg" alt="" class="circle">
          <span class="title">
           
              {{this.id}}. {{this.burger_name}}
          
          </span> {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>
